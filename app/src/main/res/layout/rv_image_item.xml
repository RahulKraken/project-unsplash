<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- main image -->
    <ImageView
        android:id="@+id/rv_image_main"
        android:contentDescription="@string/image_view_content_desc"
        android:scaleType="center"
        android:src="@drawable/profile_picture"
        android:maxHeight="375dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- large linear layout containing user detail and likes -->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <!-- user profile picture -->
        <ImageView
            android:id="@+id/rv_image_profile_picture"
            android:src="@drawable/profile_picture"
            android:contentDescription="@string/image_view_content_desc"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <!--contains full name and username-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/rv_image_profile_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- full name -->
            <TextView
                android:id="@+id/rv_image_name"
                android:text="Rahul Kraken"
                style="@style/titleStyle"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- username -->
            <TextView
                android:id="@+id/rv_image_username"
                android:text="kraken7"
                style="@style/subtitleStyle"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- like icon -->
        <ImageButton
            android:id="@+id/rv_image_like_btn"
            android:src="@mipmap/ic_like_dark"
            android:contentDescription="@string/image_view_content_desc"
            android:scaleType="center"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@id/rv_image_like_cnt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="24dp"
            android:layout_height="24dp" />

        <!-- like count -->
        <TextView
            android:id="@+id/rv_image_like_cnt"
            android:text="214,786"
            style="@style/actionTextStyle"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:layout_gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>